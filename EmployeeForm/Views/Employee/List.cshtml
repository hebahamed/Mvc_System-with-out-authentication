@Model List<Employee>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List Employees</h2> 
    <a href="Add" class="btn btn-primary">ADD Employee</a>

    @{ 
        
    }
<table class="table table-hover table-striped">
<thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Age</th>
        <th>Gender</th>
        <th>Email</th>
        <th>Department Name</th>
        

    </tr>
    </thead>
    <tbody>
      @foreach (Employee emp in Model)
      {
        <tr>
            <td>@emp.Id</td>
            <td>@emp.Name</td>
            <td>@emp.Age</td>
            <td>@emp.Gender</td>
            <td>@emp.Email</td>
            <td>@emp.Department.Name</td>
            <td>
                <button class="btn btn-danger" onclick="confirmDelete(@emp.Id)">Delete</button>

                @Html.ActionLink("Edit", "Edit", new { id = @emp.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Details", "Details", new { id = @emp.Id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Edit Inline", "Edit_Inline", new { id = @emp.Id }, new { @class = "btn btn-success" })




            </td>





        </tr>
      }
        </tbody>
</table>

   
<script src="~/Scripts/MyScripts/confirmDeleteEmp.js"></script>